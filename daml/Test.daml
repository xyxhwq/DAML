
module Test where

import Daml.Script

import Currency

createPublisher = script do
  bank <- allocateParty "Bank"
  inviteId <- submit bank do createCmd Publisher with name = bank; total = 100.0

createOwner = script do
  bank <- allocateParty "Bank"
  owner1 <- allocateParty "Owner1"
  cashId <- submit owner1 do createCmd Currency with publisher = bank; amount = 0; owner = owner1
  owner1Id <- submit owner1 do createCmd Owner with name = owner1; cash

allScripts = script do
  createPublisher
  createOwner
  